    <children>
        <Label layoutY="6.0" text="Consulta de Serviços" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font size="25.0" />
            </font>
        </Label>
        <ComboBox fx:id="stateComboBox" layoutY="54.0" prefWidth="180.0" promptText="Estado" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="50.0" />
        <ComboBox fx:id="serviceTypeComboBox" prefWidth="160.0" promptText="Serviço" AnchorPane.leftAnchor="188.0" AnchorPane.topAnchor="50.0" />
        <ComboBox fx:id="employeeComboBox" layoutX="345.0" layoutY="56.0" prefWidth="160.0" promptText="Funcionário" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0" />
        <TableView fx:id="serviceTable" layoutX="20.0" layoutY="64.0" AnchorPane.bottomAnchor="120.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <columns>
                <TableColumn fx:id="dateColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="${serviceTable.width*0.1975}" resizable="false" text="Término" />
                <TableColumn fx:id="serviceTypeColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="${serviceTable.width*0.40}" resizable="false" text="Serviço" />
                <TableColumn fx:id="messageColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="${serviceTable.width*0.40}" resizable="false" text="Mensagem" />
